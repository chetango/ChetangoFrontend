# ============================================
# VARIABLES DE ENTORNO - CHETANGO
# ============================================
# Copia este archivo como .env.local y configura tus valores

# API BACKEND
VITE_API_URL=http://localhost:3000/api
VITE_API_TIMEOUT=10000

# AUTENTICACIÓN
VITE_JWT_SECRET_KEY=your-jwt-secret-here
VITE_TOKEN_EXPIRY=24h

# APLICACIÓN
VITE_APP_NAME=Chetango
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=development

# FEATURES FLAGS (Activar/desactivar funcionalidades)
VITE_ENABLE_DEVTOOLS=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_NOTIFICATIONS=true

# LÍMITES Y CONFIGURACIÓN
VITE_MAX_FILE_SIZE=5242880
VITE_PAGINATION_SIZE=20
VITE_SESSION_TIMEOUT=1800000

# INTEGRACIÓN EXTERNA (Futuro)
VITE_PAYMENT_GATEWAY_URL=
VITE_EMAIL_SERVICE_URL=
VITE_STORAGE_URL=